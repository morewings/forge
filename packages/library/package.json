{
  "name": "forge-library",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/main/index.js",
  "module": "dist/module/lib.js",
  "browser": "dist/index.html",
  "sideEffects": false,
  "targets": {
    "module": {
      "outputFormat": "esmodule",
      "isLibrary": true
    },
    "storybook": {
      "outputFormat": "commonjs",
      "isLibrary": true,
      "sourceMap": {
        "inline": true
      },
      "distDir": "dist/module/"
    },
    "browser": {
      "sourceMap": {
        "inline": true
      }
    }
  },
  "scripts": {
    "start": "parcel serve --target browser ./src/index.html",
    "watch": "npx parcel watch --target storybook ./src/lib.js",
    "test": "npx jest --watch",
    "build": "npx parcel build --target browser ./src/index.html",
    "build:lib": "npx parcel build --target module ./src/lib.js",
    "fix:js": "npx eslint --fix ./src",
    "fix:style": "npx stylelint --fix ./src"
  },
  "browserslist": [
    "last 1 version",
    "maintained node versions"
  ],
  "dependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.5",
    "css-vars-hook": "^0.2.5",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@parcel/transformer-image": "2.0.0-beta.2",
    "@testing-library/dom": "^7.30.1",
    "@testing-library/react-hooks": "5.1.1",
    "@testing-library/user-event": "13.1.5",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.24.0",
    "eslint-config-forge": "^0.1.0",
    "eslint-import-resolver-parcel": "^1.10.6",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest": "^26.6.3",
    "jest-css-modules-transform": "^4.2.0",
    "parcel": "^2.0.0-beta.2",
    "postcss": "^8.2.12",
    "postcss-css-variables": "^0.17.0",
    "postcss-modules": "^4.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-forge": "0.1.0",
    "stylelint-order": "^4.1.0"
  }
}
