{
  "name": "forge-library",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/main/index.js",
  "module": "dist/module/lib.js",
  "sideEffects": false,
  "targets": {
    "module": {
      "outputFormat": "esmodule",
      "isLibrary": true
    },
    "storybook": {
      "outputFormat": "commonjs",
      "isLibrary": true,
      "sourceMap": {
        "inline": true
      },
      "distDir": "dist/module/"
    },
    "browser": {
      "includeNodeModules": true,
      "sourceMap": {
        "inline": true
      }
    }
  },
  "scripts": {
    "start": "npx parcel serve --target browser ./src/index.html",
    "watch": "npx parcel watch --target storybook ./src/lib.js",
    "test": "npx jest --watch",
    "build": "npx parcel build --target browser ./src/index.html",
    "build:lib": "npx parcel build --target module ./src/lib.js"
  },
  "browserslist": [
    "last 1 version",
    "maintained node versions"
  ],
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.13",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.13.13",
    "@parcel/transformer-image": "2.0.0-beta.2",
    "@testing-library/dom": "^7.30.1",
    "@testing-library/react-hooks": "5.0.3",
    "@testing-library/user-event": "12.7.1",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "babel-eslint": "^10.0.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest": "^26.6.3",
    "jest-css-modules-transform": "^4.2.0",
    "parcel": "^2.0.0-beta.2",
    "postcss": "^8.2.8",
    "postcss-css-variables": "^0.17.0",
    "postcss-modules": "^4.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  }
}
