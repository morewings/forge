{
  "private": true,
  "name": "design-library-forge",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "watch:library": "yarn workspace forge-library watch",
    "start:library": "yarn workspace forge-library start",
    "start:docs": "yarn workspace forge-docs storybook",
    "start": "concurrently --kill-others-on-fail \"yarn watch:library\" \"yarn start:docs\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "concurrently": "^6.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4"
  }
}
